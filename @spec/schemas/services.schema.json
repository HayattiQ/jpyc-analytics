{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://jpyc.info/spec/services.schema.json",
  "title": "JPYC Services",
  "type": "object",
  "properties": {
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name", "iconUrl", "tags", "description"],
        "properties": {
          "id": {
            "type": "string",
            "description": "一意な識別子（slug 推奨）",
            "pattern": "^[a-z0-9-]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "iconUrl": {
            "type": "string",
            "format": "uri"
          },
          "tags": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "uniqueItems": false
          },
          "description": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    }
  },
  "required": ["services"],
  "additionalProperties": false
}

